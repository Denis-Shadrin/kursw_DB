<div class="container custom-margin align-items-center">
    <ul class="list-group">
        <li class="list-group-item bg-secondary bg-opacity-50 border-0">
            <div class="row">
			{{#each general_information}}
                <div class="col-6">
                    <p class="fs-2 fw-bold text-decoration-underline text-white">{{{fio}}}</p>
                </div>
				<div class="col-6 text-end">
                    <a href="/add_potreb/{{{pk}}}" class="btn btn-warning">Добавить договор</a>
                </div>
				{{/each}}
            </div>
        </li>
        <li class="list-group-item bg-secondary bg-opacity-50 border-0">
                <div class="row">
				{{#each general_information}}
                    <div class="card bg-secondary bg-opacity-50">
					<h5 class="fw-bold">Общая информация</h5>
                        <div class="d-flex flex-column flex-sm-row align-items-start">
                            <div class="col-12 col-sm-4">
                                <div class="card-body d-flex flex-column justify-content-center">
                                    <div class="col">
                                        
                                        <h5 class="card-title">
                                            <span class="fw-bold">Номер паспорта: </span>
                                            <span>{{{id}}}</span>
                                        </h5>
                                        <h5 class="card-title">
                                            <span class="fw-bold">ИНН: {{{inn}}}</span>
                                        </h5>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-sm-4">
                                <div class="card-body d-flex flex-column justify-content-center">
                                    <div class="col">
                                        <h5 class="card-title">
                                            <span class="fw-bold">Адрес регистрации: </span>
                                            <span>{{{ard}}}</span>
                                        </h5>
                                        <h5 class="card-title">
                                            <span class="fw-bold">Когда выдан паспорт: </span>
                                            <span>{{{kog}}}</span>
                                        </h5>
                                        <h5 class="card-title">
                                            <span class="fw-bold">Кем выдан паспорт: </span>
                                            <span>{{{kem}}}</span>
                                        </h5>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-sm-4">
                                <div class="card-body d-flex flex-column justify-content-center">
                                    <div class="col">
                                        <h5 class="card-title">
                                            <span class="fw-bold">День рождения: </span>
                                            <span>{{{dr}}}</span>
                                        </h5>
                                        <h5 class="card-title">
                                            <span class="fw-bold">Контактная информация: </span>
                                            <span>{{{info}}}</span>
                                        </h5>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
					{{/each}}
                </div>
                <div class="row">
				{{#each info}}
                    <div class="card bg-secondary bg-opacity-50">
					
						<div class="row">
						
							<div class="d-flex flex-column flex-sm-row align-items-start">
	
								<div class="col-12 col-sm-3">
									<div class="card-body d-flex flex-column justify-content-center">
										<div class="col">
											<h5 class="card-title fw-bold"> {{{kp_n}}} </h5>
										</div>
									</div>
								</div>
								
								<div class="col-12 col-sm-3">
									<div class="card-body d-flex flex-column justify-content-center">
										<div class="col">
											<h5 class="card-title fw-bold"> {{{s_n}}} </h5>
										</div>
									</div>
								</div>
								
								<div class="col-12 col-sm-3">
									<div class="card-body d-flex flex-column justify-content-center">
										<div class="col">
											<h5 class="card-title fw-bold"> {{{uo_n}}} </h5>
										</div>
									</div>
								</div>
								
								<div class="col-12 col-sm-3">
									<div class="card-body d-flex flex-column justify-content-center">
											<h5 class="card-title fw-bold"> {{{fo_n}}} </h5>
	
									</div>
								</div>
							</div>
						
						</div>
					
						<div class="row">
											<div class="d-flex flex-column flex-sm-row align-items-start">
								<div class="col-12 col-sm-3">
									<div class="card-body d-flex flex-column justify-content-center">
													<h5 class="card-title fw-bold"> {{{st_n}}} </h5>
									</div>
								</div>
								
								<div class="col-12 col-sm-3">
									<div class="card-body d-flex flex-column justify-content-center">
														<h5 class="card-title fw-bold"> Основание статуса: </h5>
									</div>
								</div>
								
								<div class="col-12 col-sm-3">
									<div class="card-body d-flex flex-column justify-content-center">
										<div class="col">
											<h5 class="card-title fw-bold"> Приказ {{{num}}} </h5>
											<h5 class="card-title fw-bold"> от {{{date_pr}}} </h5>
										</div>
									</div>
								</div>
								
								<div class="col-12 col-sm-3">
									<div class="card-body d-flex flex-column justify-content-center">
											<h5 class="card-title fw-bold"> {{{tpr_n}}} </h5>
									</div>
								</div>
								
							</div>
						</div>
						
						<div class="row" id="documentTable{{{pk_p}}}">
							<div class="description-content" style="display: none;">
								<table class="table table-bordered table-striped custom-table">
									
								</table>
							</div>
						</div>
						
						<div class="row">
							<div class="card-body d-flex align-items-end justify-content-end">
								<div class="btn-group">
								
									<button type="button" class="btn btn-warning show-description" id="{{{pk_p}}}">Документы</button>
									<a href="/add_dop/{{{pk_p}}}" class="btn btn-success">Дополнительное соглашение</a>
								</div>
							</div>
						</div>
						
                    </div>
					{{/each}}
                </div>
        </li>
    </ul>
</div>
